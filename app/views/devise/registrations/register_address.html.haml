.wrapper
  .profile-register
    .profile-register__heading
      = render "register-head"
      .signup-bar
        %ul.progressbar
          %li.active
            会員情報
          %li.active
            電話番号認証
          %li.active
            お届け先住所入力
          %li
            支払い方法
          %li
            完了
    .profile-register__main
      %h2.profile-register__main--head
        発送元・お届け先住所入力
      .profile-register__main--form
        = form_for "#" do |f|
          = render "devise/shared/error_messages", resource: @address
          .profile-register__main--form
            .profile-register__main--form__contents
              .profile-register__main--form__contents--form
                .profile-register__main--form__contents--form__word
                  %strong お名前
                  %span.must 必須
                = f.text_field :first_name, class: "input-default", placeholder: "日本"
                = f.text_field :last_name, class: "input-default", placeholder: "花男"
              .profile-register__main--form__contents--form
                .profile-register__main--form__contents--form__word
                  %strong お名前カナ
                  %span.must 必須
                = f.text_field :first_name_kana, class: "input-default", placeholder: "ニッポン"
                = f.text_field :last_name_kana, class: "input-default", placeholder: "ハナオ"
              .profile-register__main--form__contents--form
                .profile-register__main--form__contents--form__word
                  %strong 郵便番号
                  %span.must 必須
                = f.text_field :postal_code, class: "input-default", placeholder: "例) 123-4567"
              .profile-register__main--form__contents--form
                .profile-register__main--form__contents--form__word
                  %strong 都道府県
                  %span.must 必須
                  %br
                  = f.select :birth_month, options_for_select((1..12).to_a), {:prompt => "都道府県設定必要"}, {class: "select-wrap"}
              .profile-register__main--form__contents--form
                .profile-register__main--form__contents--form__word
                  %strong 市町村区
                  %span.must 必須
                  %br
                  = f.text_field :address, class: "input-default", placeholder: "例) 東京都新宿区"
              .profile-register__main--form__contents--form
                .profile-register__main--form__contents--form__word
                  %strong 番地
                  %span.must 必須
                  %br
                  = f.text_field :address, class: "input-default", placeholder: "例) 新宿1-1-1"
              .profile-register__main--form__contents--form
                .profile-register__main--form__contents--form__word
                  %strong 建物名
                  %span.optional 任意
                  %br
                  = f.text_field :building, class: "input-default", placeholder: "例) カネダビル１０００"
              .profile-register__main--form__contents--form
                .profile-register__main--form__contents--form__word
                  %strong 電話番号
                  %span.optional 任意
                  %br
                  = f.text_field :phone_number, class: "input-default", placeholder: "例) 08009876543"
              .profile-register__main--form__sending
                .profile-register__main--form__sending--base
                  = f.submit "次へ進む", class: "default-btn"
      .profile-register__footer
        = render "register-footer"