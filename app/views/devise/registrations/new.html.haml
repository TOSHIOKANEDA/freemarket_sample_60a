.wrapper
  .profile-register
    .profile-register__heading ここ高さ128pxでhead入れるようにあけたぜ

    .profile-register__main
      .profile-register__main--head 会員登録だぜ
      .profile-register__main--form
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          .profile-register__main--form
            .profile-register__main--form__contents
              .profile-register__main--form__contents--form
                .profile-register__main--form__contents--form__word ニックネーム
                %br/
                = f.email_field :nickname, class: "input-default"
              .profile-register__main--form__contents--form
                メールアドレス
                %br/
                = f.email_field :email
              .profile-register__main--form__contents--form
                パスワード
                - if @minimum_password_length
                  %em
                    (#{@minimum_password_length} characters minimum)
                %br/
                = f.password_field :password, autocomplete: "new-password"
              .profile-register__main--form__contents--form
                パスワード（確認）
                %br/
                = f.password_field :password_confirmation, autocomplete: "new-password"
              .profile-register__main--form__contents--form
                = f.label "苗字"
                %br/
                = f.text_field :first_name
              .profile-register__main--form__contents--form
                = f.label "苗字のかな"
                %br/
                = f.text_field :first_name_kana
              .profile-register__main--form__contents--form
                = f.label "お名前"
                %br/
                = f.text_field :last_name
              .profile-register__main--form__contents--form
                = f.label "お名前のかな"
                %br/
                = f.text_field :last_name_kana
              .profile-register__main--form__contents--form
                = f.label "誕生日"
                %br/
                - this_year = Date.today.year
                = f.select :birth_year, options_for_select((1900..this_year).to_a.sort.reverse), :prompt => "--"
              .profile-register__main--form__contents--form
                = f.label "誕生月"
                %br/
                = f.select :birth_month, options_for_select((1..12).to_a), :prompt => "--"
              .profile-register__main--form__contents--form
                = f.label "誕生日"
                %br/
                = f.select :birth_day, options_for_select((1..31).to_a), :prompt => "--"
              .profile-register__main--form__contents--form
                = f.label "アバター実験"
                %br/
                = f.file_field :avatar
          .profile-register__main--form__sending
            = f.submit "次へ進む"
    .profile-register__footer

