.wrapper
  .profile-register
    .profile-register__heading ここ高さ128pxでhead入れるようにあけたぜ

    .profile-register__main
      .profile-register__main--head 会員登録だぜ
      .profile-register__main--form
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          .profile-register__main--form
            .profile-register__main--form__contents
              .profile-register__main--form__contents--form
                .profile-register__main--form__contents--form__word
                  ニックネーム 
                  %span.must 必須
                = f.text_field :nickname, class: "input-default", placeholder: "例) メルカリ太郎"
              .profile-register__main--form__contents--form
                .profile-register__main--form__contents--form__word
                  メールアドレス
                  %span.must 必須
                = f.email_field :email, class: "input-default", placeholder: "PC・携帯どちらでも可"
              .profile-register__main--form__contents--form
                .profile-register__main--form__contents--form__word
                  パスワード
                  %span.must 必須 
                = f.password_field :password, autocomplete: "new-password", class: "input-default", placeholder: "7文字以上の半角英数字（まだ６文字）"
                %p.form-info-text__remark ※ 英字と数字の両方を含めて設定してください
                = f.check_box :password, class: "default-checkbox_pass"
                %span.form-info-text__pass パスワードを表示する
              .profile-register__main--form__contents--form
                .profile-register__main--form__contents--form__word
                  パスワード（確認）
                  %span.must 必須 
                = f.password_field :password_confirmation, autocomplete: "new-password", class: "input-default", placeholder: "ここは削除する"
              .profile-register__main--form__contents--form
                %h3 本人確認
                %p 安心・安全にご利用いただくために、お客さまの本人情報の登録にご協力ください。他のお客さまに公開されることはありません。
              .profile-register__main--form__contents--form
                .profile-register__main--form__contents--form__word
                  お名前（全角）
                  %span.must 必須
                = f.text_field :first_name, class: "input-default__half"
                = f.text_field :last_name, class: "input-default__half"
              .profile-register__main--form__contents--form
                .profile-register__main--form__contents--form__word
                  お名前カナ（全角）
                  %span.must 必須 
                = f.text_field :first_name_kana, class: "input-default__half"
                = f.text_field :last_name_kana, class: "input-default__half"                
              .profile-register__main--form__contents--form
                .profile-register__main--form__contents--form__word
                  %span.form-select
                    - this_year = Date.today.year
                    = f.select :birth_year, options_for_select((1900..this_year).to_a.sort.reverse), {:prompt => "--"}, {class: "select-wrap"}
                    %i.fas.fa-chevron-down
                  %span.select-span 年
                  %span.form-select
                    = f.select :birth_month, options_for_select((1..12).to_a), {:prompt => "--"}, {class: "select-wrap"}
                    %i.fas.fa-chevron-down
                  %span.select-span 月
                  %span.form-select
                    = f.select :birth_day, options_for_select((1..31).to_a), {:prompt => "--"}, {class: "select-wrap"}
                    %i.fas.fa-chevron-down
                  %span.select-span 日
              .profile-register__main--form__contents--form
                .profile-register__main--form__contents--form__word
                = f.label "アバター実験"
                = f.file_field :avatar
          .profile-register__main--form__sending
            = f.submit "次へ進む"
      .profile-register__footer

