.wrapper
  .profile-register
    .profile-register__heading
      = render "register-head"
      .signup-bar
        %ul.progressbar
          %li.active
            会員情報
          %li.active
            電話番号認証
          %li.active
            お届け先住所入力
          %li.active
            支払い方法
          %li
            完了
    .profile-register__main
      %h2.profile-register__main--head
        支払い方法
