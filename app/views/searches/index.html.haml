= render 'items/header'

.search
  .search-container
    .search-left
      = render 'searches/side_bar'
    .search-right
      %section.items-box-container
        -if @search.present?
          %h2.search-result-head
            =@search
            %span.search-result-head-text
              の検索結果
          .search-result-number
            ="1-#{@item.count}件表示"
        -else
        .items-box-content
          = render "categories/ladies"

= render 'items/footer'